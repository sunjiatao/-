.two_group_box{width: 100%;height: auto;margin:0 auto;display: flex;justify-content:space-evenly; }
.youshi_box{width: 347rpx;height: 270rpx;background:#fff;box-shadow:0 0 15rpx #B3B2B2;margin-top:17rpx;display: flex;justify-content: center;align-items: center;flex-direction:column;}
.youshi_box image{width: 90rpx;height: 90rpx;}
.big_text{font-size: 30rpx;}
.small_text{font-size: 20rpx;padding:0 20rpx;text-align: center;color: #aeaaaa}
