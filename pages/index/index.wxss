.anli_img{width: 95%;height:450rpx;margin:0 auto;margin-bottom: 17rpx;background:#000;position: relative;}
.anli_img image{width: 100%;height:100%;}
.anli_img text{width: 100%;height: 50rpx;background:rgba(230,83,69,0.8);display: block;position: absolute;left: 0;bottom:0;line-height: 50rpx;color: #fff;font-size: 25rpx;text-align: center;}

