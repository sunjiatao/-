/* 第一部分 */
.one_group{width: 100%;height: auto;}
.group_text{width: auto;height: auto;padding-top:20rpx;margin:0 auto;}
.group_g{width: 35rpx;height: 8rpx;background:#000}
.group_bai{width: 20rpx;height: 8rpx;background: #fff;}
.group_flex{display: flex; justify-content: center;align-items: center;}
.group_flex text{font-size: 25rpx;}
.group_font{display: block;text-align: center;}

.group_box{width: 100%;height: auto;}
.one_box{display: flex;justify-content: space-around;margin:0 auto;width: 98%;}

.box_fw{width: 350rpx;height: 200rpx;position: relative;margin-top:17rpx;}
.box_fw image{width:100%;height: 100%;}
.box_fw .son_text{display: flex;justify-content: center;}
.box_fw text{position: absolute;top: 0;line-height: 200rpx;color: #fff;font-size: 27rpx;}
.red_box{width: 30rpx;height: 10rpx;background:red;position: absolute;top: 58%;}


